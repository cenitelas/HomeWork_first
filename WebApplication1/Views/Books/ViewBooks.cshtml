@model IEnumerable<WebApplication1.Models.BookModel>

<div class="books">
    @foreach (var item in Model)
    {
        <div class="book">
            <div class="info">
                <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
                <p><b>Автор:</b> @Html.DisplayFor(modelItem => item.AuthorName)</p>
                <p><b>Жанр:</b> @Html.DisplayFor(modelItem => item.GenreName)</p>        
                <p><b>Кол-во страниц:</b> @Html.DisplayFor(modelItem => item.Pages)</p>
                <p><b>Цена:</b> @Html.DisplayFor(modelItem => item.Price)</p> 
                <div class="button-block">
                    @Ajax.ActionLink("Edit", "CreateAndEdit", new {id = item.Id }, new AjaxOptions { UpdateTargetId = "modal-body" }, new {@class="btn btn-warning" , data_toggle = "modal", data_target = "#exampleModalScrollable" })
                    @Ajax.ActionLink("Delete", "Delete", new { id = item.Id }, new AjaxOptions { UpdateTargetId = "content-book" }, new {@class="btn btn-warning"})
                </div>
            </div>
            @Html.Raw("<img src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(item.Image) + "\" />")
        </div>
    }

</div>