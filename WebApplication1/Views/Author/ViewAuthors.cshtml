@model IEnumerable<WebApplication1.Models.AuthorModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a class="btn btn-link" onclick="editAuthor(@item.Id)" data-toggle="modal" data-target="#exampleModalScrollable">Edit</a> |

                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn - link" })
            </td>
        </tr>
    }

</table>